<%= form_for [:admin, @banner] do |f| %>

  <%= render 'errors' %>

  <div class="row">
    <div class="small-3 column">
    <%= f.label :style, t("admin.banners.banner.style") %>
    <%= f.select :style, options_for_select(@banner_styles, @banner.style),
                      label: false,placeholder: t("admin.banners.banner.style"),
                      data: {js_banner_style: "js_banner_style"}
                       %>
    </div>

    <div class="small-12 column">
      <%= f.label :title, t("admin.banners.banner.title") %>
      <%= f.text_field :title, placeholder: t("admin.banners.banner.title"), label: false, data: {js_banner_title: "js_banner_title"}
      %>
    </div>

    <div class="small-12 column">
      <%= f.label :text, t("admin.banners.banner.text") %>
      <%= f.text_field :text,
                        label: false, 
                        data: {js_banner_text: "js_banner_text"},
                        placeholder: t("admin.banners.banner.text") %>
    </div>

    <div class="small-12 column">
      <%= f.label :link, t("admin.banners.banner.link") %>
      <%= f.text_field :link,
                        label: false,
                        placeholder: t("admin.banners.banner.link") %>
    </div>

    <div class="small-3 column">
      <%= f.label :post_started_at, t("admin.banners.banner.post_started_at") %>
      <%= f.datetime_field :post_started_at,
                        label: false,
                        placeholder: t("admin.banners.banner.post_started_at"),
                        id: "post_started_at" %>
    </div>

    <div class="small-3 column">
      <%= f.label :post_ended_at, t("admin.banners.banner.post_ended_at") %>
      <%= f.datetime_field  :post_ended_at,
                        label: false,
                        placeholder: t("admin.banners.banner.post_ended_at"),
                        id: "post_ended_at" %>
    </div>
   
    <div class="actions small-12 column">
      <%= f.submit(class: "button", value: t("admin.banners.edit.form.submit_button")) %>
    </div>
  </div>

  <div id="js-banner-style" class="panel <%= banner_style(@banner.style) %> clear margin-bottom">
    <%= link_to @banner.link do %>
      <h2 id="js-banner-title"><%= @banner.title %></h2>
      <h3 id="js-banner-text"><%= @banner.text %></h3>
    <% end %>
  </div>
<% end %>
