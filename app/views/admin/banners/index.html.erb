<h2><%= t("admin.banners.index.title") %></h2>

<p>
  <%= link_to t("admin.banners.index.create"),
              new_admin_banner_path,
              class: "button large success " %>
</p>

<h3><%= page_entries_info @banners %> </h3>

<table>
  <% @banners.each do |banner| %>
    <tr id="<%= dom_id(banner) %>">
      <td>
        <div class="panel <%= banner_style(banner.style) %> clear margin-bottom">
          <%= link_to banner.link do %>
            <h2><%= banner.title %></h2>
            <h3><%= banner.text %></h3>
         <% end %>
        </div>
        <div><%= t("admin.banners.banner.post_started_at")%> <%= banner.updated_at %> 
             <%= t("admin.banners.banner.post_ended_at")%> <%= banner.created_at%>
        </div>
      </td>
      <td>
        <%= link_to edit_admin_banner_path(banner), 
            class: 'edit-banner button warning small float-right' do %>
              <span class="icon-edit"></span>
              <%= t("admin.banners.index.edit") %>
            <% end %>
      </td>
      <td>
        <%= link_to admin_banner_path(banner), method: :delete,
            class: 'delete-banner button alert small float-right' do %>
              <span class="icon-delete"></span>
              <%= t("admin.banners.index.delete") %>
            <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @banners %>
